<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.hibernate.demo.FirstLevelCache.model.Student" table="STUDENT_M" schema="studentregistration">
<id name="id" column="student_id"></id><!--for mapping primary key  -->
<property name="name" column="student_name"></property>
<property name="email" column="student_email"></property>
</class>
</hibernate-mapping> 