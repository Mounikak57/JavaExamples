<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.hibernate.demo.model.Employee" table="employee" schema="employeemanagement">
<id name="id" column="emp_id"></id><!--for mapping primary key  -->
<property name="name" column="emp_name"></property>
<property name="email" column="emp_email"></property>
</class>
</hibernate-mapping>